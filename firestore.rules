rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla 1: Deniega por defecto el acceso a toda la base de datos.
    match /{document=**} {
      allow read, write: if false;
    }

    // Regla 2: Permite crear un documento de usuario si est√°s autenticado.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Regla 3: Permite leer y escribir en subcolecciones del usuario.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // LUGARES - Todos los usuarios autenticados pueden leer y escribir
    match /lugares/{lugarId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // RESERVAS - Usuarios pueden crear y gestionar sus propias reservas
    match /reservas/{reservaId} {
      // üîì CAMBIO CR√çTICO: Permitir leer todas las reservas para verificar disponibilidad
      allow read: if request.auth != null;
      
      // Crear: solo si pones tu propio usuarioId
      allow create: if request.auth != null && 
                       request.resource.data.usuarioId == request.auth.uid;
      
      // Actualizar/Eliminar: solo si es tu reserva
      allow update, delete: if request.auth != null && 
                               resource.data.usuarioId == request.auth.uid;
    }

    // FAVORITOS - Usuarios pueden gestionar sus propios favoritos
    match /favoritos/{favoritoId} {
      allow read: if request.auth != null && 
                     (resource.data.usuarioId == request.auth.uid);
      allow create: if request.auth != null && 
                       request.resource.data.usuarioId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.usuarioId == request.auth.uid;
    }

    // HISTORIAL - Usuarios pueden crear y leer su propio historial
    match /history/{historyId} {
      allow read: if request.auth != null && 
                     resource.data.usuarioId == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.usuarioId == request.auth.uid;
    }
  }
}
