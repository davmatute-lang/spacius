<?xml version="1.0" encoding="utf-8"?>
<!--
    Colores Accesibles según WCAG 2.1 AA
    
    Todos los colores en este archivo cumplen con:
    - Ratio de contraste 4.5:1 para texto normal
    - Ratio de contraste 3:1 para texto grande (18pt+/14pt bold+)
    - Ratio de contraste 3:1 para componentes UI
    
    Referencias:
    - https://www.w3.org/WAI/WCAG21/Understanding/contrast-minimum.html
    - https://webaim.org/resources/contrastchecker/
-->
<resources>
    <!-- Colores Primarios Accesibles -->
    <color name="primary_accessible">#0066CC</color> <!-- Azul oscurecido, ratio 7.45:1 con blanco -->
    <color name="primary_dark_accessible">#004A99</color> <!-- Azul muy oscuro -->
    <color name="accent_accessible">#2E7D32</color> <!-- Verde oscurecido, ratio 6.23:1 con blanco -->
    
    <!-- Textos sobre fondo blanco (wcag_ prefix para evitar duplicados) -->
    <color name="wcag_text_primary">#000000</color> <!-- Negro, ratio 21:1 -->
    <color name="wcag_text_secondary">#666666</color> <!-- Gris oscuro, ratio 5.74:1 -->
    <color name="wcag_text_tertiary">#757575</color> <!-- Gris medio, ratio 4.54:1 (límite AA) -->
    
    <!-- Textos sobre fondos de color -->
    <color name="text_on_primary">#FFFFFF</color> <!-- Blanco sobre azul -->
    <color name="text_on_accent">#FFFFFF</color> <!-- Blanco sobre verde -->
    <color name="text_on_error">#FFFFFF</color> <!-- Blanco sobre rojo -->
    
    <!-- Estados de Error (cumple WCAG) -->
    <color name="error_accessible">#C62828</color> <!-- Rojo oscurecido, ratio 5.93:1 -->
    <color name="error_light">#FFEBEE</color> <!-- Fondo de error claro -->
    <color name="error_dark">#B71C1C</color> <!-- Texto sobre fondo claro, ratio 7.01:1 -->
    
    <!-- Estados de Éxito -->
    <color name="success_accessible">#2E7D32</color> <!-- Verde oscuro, ratio 6.23:1 -->
    <color name="success_light">#E8F5E9</color> <!-- Fondo verde claro -->
    
    <!-- Estados de Advertencia -->
    <color name="warning_accessible">#E65100</color> <!-- Naranja oscuro, ratio 5.47:1 -->
    <color name="warning_light">#FFF3E0</color> <!-- Fondo naranja claro -->
    
    <!-- Fondos -->
    <color name="background_white">#FFFFFF</color>
    <color name="background_light">#F5F5F5</color>
    <color name="background_card">#FAFAFA</color>
    
    <!-- Botones -->
    <color name="button_primary">#0066CC</color> <!-- ratio 7.45:1 con texto blanco -->
    <color name="button_secondary">#2E7D32</color> <!-- ratio 6.23:1 con texto blanco -->
    <color name="button_disabled">#BDBDBD</color>
    
    <!-- Iconos -->
    <color name="icon_active">#000000</color>
    <color name="icon_inactive">#757575</color> <!-- ratio 4.54:1 -->
    
    <!-- Bordes y Divisores -->
    <color name="divider">#E0E0E0</color>
    <color name="border">#BDBDBD</color>
    
    <!--
        NOTA IMPORTANTE:
        Al usar estos colores, asegúrate de:
        1. Usar textColorPrimary/Secondary en lugar de colores custom
        2. Probar con herramientas de contraste (Chrome DevTools, WebAIM)
        3. Validar con TalkBack activado
        4. Probar con diferentes tamaños de fuente del sistema
    -->
</resources>
