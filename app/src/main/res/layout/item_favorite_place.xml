<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewFavorite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Imagen del lugar -->
        <ImageView
            android:id="@+id/ivFavoritePlace"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen del lugar"
            android:src="@drawable/ic_spaces"
            android:background="@drawable/edittext_rounded" />

        <!-- Información del lugar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvFavoriteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Lugar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Parque de la Madre" />

            <TextView
                android:id="@+id/tvFavoriteDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del lugar"
                android:textSize="14sp"
                android:textColor="#666666"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                tools:text="Espacio público para eventos recreativos" />

        </LinearLayout>

        <!-- Botón para eliminar de favoritos -->
        <ImageButton
            android:id="@+id/btnRemoveFavorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_star_filled"
            android:tint="#FFD700"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Eliminar de favoritos"
            android:padding="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
